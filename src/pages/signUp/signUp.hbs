<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
<!--    <link rel="stylesheet" href="./signUp.pcss">-->
<!--    <link rel="stylesheet" href="./styles.pcss">-->
    <link rel="stylesheet" href="../../index.pcss">
    <title>Sign Up</title>
</head>
<body>
<div class="signup-container">

    <div class="signup-form">
        <h2>Sign up</h2>

        <form>
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email"><br>
            <label for="login">Login:</label><br>
            <input type="text" id="login" name="login"><br>
            <label for="first_name">First name:</label><br>
            <input type="text" id="first_name" name="first_name"><br>
            <label for="second_name">Last name:</label><br>
            <input type="text" id="second_name" name="second_name"><br>
            <label for="phone">Phone:</label><br>
            <input type="text" id="phone" name="phone"><br>
            <label for="password">Password:</label><br>
            <input type="password" id="password" name="password"><br>
            <label for="password">Password (one more time):</label><br>
            <input type="text" id="password" name="password"><br><br>
        </form>

        <div class="buttons">
            {{> button/button label='Sign up'}}
            <a href="../signIn/signIn.hbs">Sign in</a>
        </div>

    </div>
</div>
</body>
</html>