<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../../index.pcss">
    <title>Sign Up</title>
</head>
<body>
<div class="signup-container">

    <div class="signup-form">
        <h2>Sign up</h2>

        <form class="signup-form_inputs">
            {{> input/input type='email' label='Email:' id='email' style='margin-bottom: 16px'}}

            {{> input/input type='text' label='Login:' id='login' style='margin-bottom: 16px'}}

            {{> input/input type='text' label='First name:' id='first_name' style='margin-bottom: 16px'}}

            {{> input/input type='text' label='Last name:' id='second_name' style='margin-bottom: 16px'}}

            {{> input/input type='text' label='Phone:' id='phone' style='margin-bottom: 16px'}}

            {{> input/input type='password' label='Password:' id='password' style='margin-bottom: 16px'}}

            {{> input/input type='password' label='Password (one more time):' id='second_password' style='margin-bottom: 16px'}}
        </form>

        <div class="buttons">
            {{> button/button label='Sign up'}}
            <a href="../signIn/signIn.hbs">Sign in</a>
        </div>

    </div>
</div>
</body>
</html>