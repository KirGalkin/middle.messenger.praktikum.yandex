.profile-container {
    height: 100%;

    .navigation {
        height: 100%;
        width: 64px;
        position: absolute;
        left: 0;
        background: var(--secondary-bg-color);
        border-right: 1px solid var(--primary-color);
        display: flex;

        .navigation-arrow {
            margin: auto;
            cursor: pointer;
        }
    }

    .profile-content {
        display: flex;
        flex-direction: column;
        color: var(--main-text-color);
        align-items: center;
        height: 100%;
        justify-content: center;
        font-size: 13px;

        .form {
            width: 510px;
            margin: 0 auto 60px;

            input {
                width: 100%;
                margin-bottom: 10px;
            }
        }

        .controls {
            width: 510px;
            margin: 0 auto;

            .exit-control {
                color: var(--warning-color);
            }
        }
    }
}
