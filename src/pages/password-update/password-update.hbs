<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./password-update.pcss">
    <link rel="stylesheet" href="../../index.pcss">

    <title>Profile</title>
</head>
<body>
<div class="password_update-container">
    <div class="navigation">
        <img class="navigation-arrow" src="../../../static/nav_arrow.png" alt="nav arrow">
    </div>
    <div class="password_update-content">
        <div class="avatar">
            <img class="avatar-img" src="../../../static/ava_blank.png" alt="avatar">
        </div>
        <div class="form">
            {{> updateField/updateField id='oldPassword' label='Old password' type='password' }}
            {{> line/line }}

            {{> updateField/updateField id='newPassword' label='New password' type='password' }}
            {{> line/line }}

            {{> updateField/updateField id='newPasswordRepeat' label='Repeat new password' type='password' }}
        </div>
        <div class="controls">
            {{> button/button label='Update'}}
        </div>
    </div>
</div>
</body>
</html>