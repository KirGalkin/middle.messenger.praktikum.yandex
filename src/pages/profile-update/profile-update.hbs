<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./profile-update.pcss">
    <link rel="stylesheet" href="../../index.pcss">

    <title>Profile</title>
</head>
<body>
<main class="profile_update-container">
    <div class="navigation">
        <img class="navigation-arrow" src="../../../static/nav_arrow.png" alt="nav arrow">
    </div>
    <div class="profile_update-content">
        <div class="avatar">
            <img class="avatar-img" src="../../../static/ava_blank.png" alt="avatar">
            <p class="avatar-name">Name</p>
        </div>
        <form>
            <div class="form">
                {{> updateField/updateField id='email' label='Email' type='email' }}
                {{> line/line }}

                {{> updateField/updateField id='login' label='Login' type='login' }}
                {{> line/line }}

                {{> updateField/updateField id='first_name' label='First name' type='first_name' }}
                {{> line/line }}

                {{> updateField/updateField id='second_name' label='Last name' type='second_name' }}
                {{> line/line }}

                {{> updateField/updateField id='phone' label='Phone' type='phone' }}
            </div>
            <div class="controls">
                {{> button/button label='Update'}}
            </div>
        </form>
    </div>
</main>
</body>
</html>
