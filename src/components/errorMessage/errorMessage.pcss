.error-message_container {
    display: flex;
    justify-content: center;
    height: 100%;
    flex-direction: column;
    color: #fafeff;

    .message-container_message {
        font-size: 20px;
        line-height: 20px;
        margin-bottom: 70px;
    }

    .message-container_code {
        font-size: 40px;
        line-height: 40px;
        margin-bottom: 20px;
    }
}
